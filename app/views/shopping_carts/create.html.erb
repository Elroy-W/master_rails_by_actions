<div class="modal fade" tabindex="-1" id="shopping_cart_modal">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-body">
                <h4 class="text text-success"><i class='fa fa-check-circle-o'></i> Add to shopping cart successfully
                </h4>

                <div class="media">
                    <div class="media-left">
                        <a href="javascript:;">
                            <%= image_tag @product.main_product_image.image.url(:small), class: 'media-object', alt: @product.title %>
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><%= @product.title %></h4>
                        Amount: <%= @shopping_cart.amount %>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Continue to select product</button>
                <%= link_to "View Shopping Cart", shopping_carts_path, class: "btn btn-danger" %>
            </div>
        </div>
    </div>
</div>